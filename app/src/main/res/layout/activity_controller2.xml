<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BACK"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller"
    android:layout_marginHorizontal="30dp"
    >

    <!-- Button A -->

    <!-- Button B -->

    <!-- Button C -->

    <!-- Button D -->

    <!-- Button E -->

    <!-- Joystick -->

    <!-- Back Button -->

    <!-- Status Text -->

    <Button
        android:id="@+id/A"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#1a92a8"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColorLink="#040404"
        app:cornerRadius="10dp"
        app:icon="@drawable/pstriangle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:iconTint="@color/icon_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <Button
        android:id="@+id/B"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#1a92a8"
        android:foregroundGravity="center"
        android:gravity="center"
        app:cornerRadius="10dp"
        app:icon="@drawable/pscross"
        app:iconGravity="textStart"
        app:iconSize="35dp"
        app:iconTint="@color/icon_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.755" />

    <Button
        android:id="@+id/C"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#1a92a8"
        android:text=""
        app:cornerRadius="10dp"
        app:icon="@drawable/pssquare"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="25dp"
        app:iconTint="@color/icon_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:id="@+id/D"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#1a92a8"
        app:cornerRadius="10dp"
        app:icon="@drawable/pscircle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="25dp"
        app:iconTint="@color/icon_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <com.example.joystick_lib.Joystick_Lib
        android:id="@+id/joystick_Lib"
        android:layout_width="245dp"
        android:layout_height="232dp"
        android:backgroundTint="#FFFFFF"
        app:JV_backgroundColor="#1a92a8"
        app:JV_backgroundSizeRatio="95%"
        app:JV_borderColor="#FFFFFF"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#000000"
        app:JV_buttonSizeRatio="30%"
        app:JV_fixedCenter="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1a92a8"
        android:text="Back"
        android:textColor="#E6E3E3"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_arrow_back_24"
        app:iconTint="@color/icon_tint"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/status"
        android:layout_width="416dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="Status"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/Cammand"
        android:layout_width="98dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="NA"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Grip"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#1a92a8"
        android:text="GRIP"
        android:textColor="#E6E3E3"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/UnGrip"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#1a92a8"
        android:text="UNGRIP"
        android:textColor="#E6E3E3"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Reconnect"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1a92a8"
        android:text="Reconnect"
        android:textColor="#E6E3E3"
        app:cornerRadius="10dp"
        app:icon="@drawable/reconnect"
        app:iconSize="18dp"
        app:iconTint="@color/icon_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

</androidx.constraintlayout.widget.ConstraintLayout>
